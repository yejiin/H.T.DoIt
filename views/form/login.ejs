<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="/stylesheets/form.css" type="text/css">
</head>

<body>
    <% include ../partials/header %>
    <div class="form-wrap">
        <div class="form-html">
            <input id="tab-1" type="radio" name="tab" class="title" checked><label for="tab-1" class="tab">Login</label>
            <form class="form" action="/login" method="post">
                <div class="group">
                    <label for="user" class="label">Id</label>
                    <input type="text" name="id" id="user" class="input">
                </div>
                <div class="group">
                    <label for="pass" class="label">Password</label>
                    <input type="password" name="password" id="pass" class="input">
                    </div>
                <% if(user.username) { %>
                <div class="group">
                    <input type="submit" class="loginbutton" value="Login">
                </div>
                <div class="group">
                    <input type="submit" class="signupbutton" value="Sign up">
                </div>
                <% } %>
            </form>
        </div>
    </div>
    <% include ../partials/footer %>
</body>

</html>