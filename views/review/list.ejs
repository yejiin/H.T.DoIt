<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css">
    <script src="//code.jquery.com/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/latest/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<style>

  #page-content-wrapper{
    width: 800px;
    margin: auto;

  }

  #footer{
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 15px 0;
	text-align: center;
  color: gray;
  font-size: 12px;
}


</style>
</head>
<body>
    <% include ../partials/header %>
<main>   
  <div id="page-content-wrapper">
      <h3 style="margin-top: 80px;">Review</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">번호</th>
            <th scope="col">작성자</th>
            <th scope="col">트레이닝</th>
            <th scope="col">제목</th>
            <th scope="col">등록일</th>
          </tr>
        </thead>
        <tbody>
        <% 
        for(var i=0 ; i<results.length; i++){
            var data = results[i]; 
            var page = model.currentPage;%>
          <tr>
            <th scope="row" style="text-align: center;"><%=(i+1)+(page-1)*5%></th>
            <td><%=data.user_id%></td>
            <td style="font-size: 8px; vertical-align: middle;">[<%=data.ttitle%>]</td>
            <td style=" width: 300px;"><a href="/review/detail/<%=data.no%>"><%=data.title%><a></a></td>
            <td><%=data.regdate%></td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <button type="button" class="btn btn-primary" onclick="location.href='/review/write'">글쓰기</button>

      <div  style="margin-left: 400px;">
        <ul class="pagination">
            <li class="page-item disabled">
              <a class="page-link" href="#">&laquo;</a>
            </li>
            <% for(var i =1 ; i <= model.lastPage; i ++ ){ %>
                <li class="page-item">
                  <a class="page-link" href="/review?page=<%=i%>"><%=i%></a>
               <% } %>
          <li class="page-item">
            <a class="page-link" href="#">&raquo;</a>
          </li>
        </ul>
      </div>
  </div>
</main>

<% include ../partials/footer %>
</body>

</html>
